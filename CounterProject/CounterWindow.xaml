<Window x:Class="CounterProject.CounterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CounterProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <TextBox Text="{Binding Counter}" Canvas.Left="324" TextWrapping="Wrap" Canvas.Top="86" HorizontalAlignment="Left" Height="35" VerticalAlignment="Top" Width="168"/>
        <Button  Content="plus" Canvas.Left="260" Canvas.Top="166" HorizontalAlignment="Left" VerticalAlignment="Top" Command="{Binding IncrementCommand}"/>
        <Button Command="{Binding DecrementCommand}" Content="Minus" Canvas.Left="380" Canvas.Top="171" HorizontalAlignment="Left" VerticalAlignment="Center" RenderTransformOrigin="3.395,0.265"/>

    </Canvas>
</Window>
